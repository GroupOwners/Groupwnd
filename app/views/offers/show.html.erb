<header class="page-title">
  <h1>Offer</h1>
</header>

<section class="one_offer">
  <h1 class="coupon_name"><%= @offer.name %></h1>
  <%= link_to image_tag(@offer.image), offer_path(@offer) %>
  <span class="description">
    <%= @offer.description %>
  </span>
  <span class="sale_price">
    Sale Price: <%= humanized_money_with_symbol @offer.sale_price %>
  </span>
  <span class="actual_price">
    Actual Price: <%= humanized_money_with_symbol @offer.actual_price %>
  </span>
  <%= button_to "Buy Me", offer_purchase_path(@offer) %>
</section>
