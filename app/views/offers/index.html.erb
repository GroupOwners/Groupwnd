<header class="page-title">
  <h1>Todayâ€™s Offers</h1>
</header>

<section>
  <ol class="offers">
    <% @offers.each do |offer| %>
      <li class="offer">
        <div class="offer-image">
          <%= link_to image_tag(offer.image), offer_path(offer) %>
        </div>
        <div class="offer-details">
          <h1 class="offer-name"><%= offer.name %></h1>
          <span class="offer-price">
            Sale Price: <%= humanized_money_with_symbol offer.sale_price %>
          </span>
        </div>
      </li>
    <% end %>
  </ol>
</section>
